@page "{id}"
@model Lab12.Pages.Doctors.EditDoctor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h1>Edit doctor</h1>
        </div>
        <div class="card-body">
            <div class="passEditRowName">
                <label asp-for="Doctor.Name">Edit name: </label>
                <input asp-for="Doctor.Name" placeholder="@Model.Doctor.Name"/>
            </div>
        </div>
    </div>
    <div>
        <button class="btn41-43 btn-43" type="submit">Update</button>
        <a class="btn41-43 btn-43" asp-page="./Index">Cancel</a>
    </div>
    
</form>